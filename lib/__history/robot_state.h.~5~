// check robot position and status
#include "global.h"
#ifndef __ROBOT_STATE__
#define __ROBOT_STATE__

int is_at_cross() {
   if (line_sensor == 0b00011011) {
      return 1;
   }
   else {
      return 0;
   }
}
int get_current_station() {
   static cur_station = 0;
   static long last_time = 0, period;
   if (is_at_cross()) {
      period = __TIME__ - last_time;
   }
   else {
      last_time = __TIME__;
   }
   if (period > 50) {
      cur_station++;
   }
   return cur_station;
}

